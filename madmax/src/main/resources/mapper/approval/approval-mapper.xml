<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="approval">
	<select id="selectDeptInfo" resultType="com.madmax.stool.approval.model.vo.DeptUsers">
		SELECT * FROM DEPT
	</select>
	<select id="selectDeptUsers" parameterType="com.madmax.stool.approval.model.vo.DeptUsers"
								 resultType="com.madmax.stool.approval.model.vo.User">
		SELECT * FROM STOOLUSER LEFT JOIN DEPT USING(DEPTCODE)
								LEFT JOIN JOBTABLE USING(JOBCODE) 
								WHERE DEPTCODE=#{deptCode} ORDER BY jobcode
	</select>
	<select id="selectApprDocList" resultType="com.madmax.stool.approval.model.vo.ApprDocType">
		SELECT * FROM APPRDOCTYPE 
	</select>
	<select id="selectApprDocListCount" resultType="_int">
		SELECT COUNT(*) FROM APPRDOCTYPE
	</select>
	<select id="selectApprDocForm" parameterType="_int" 
								resultType="com.madmax.stool.approval.model.vo.ApprDocType">
		SELECT * FROM APPRDOCTYPE WHERE APPRDOCTYPENO=#{apprDocTypeNo}
	</select>
</mapper>
